<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.splitwise_project.feature.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.splitwise_project.feature.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.splitwise_project.feature.groups.home.HomeFragment"
        android:label="Groups"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_groupDetailsFragment"
            app:destination="@id/groupDetailsFragment">
            <argument
                android:name="groupId"
                app:argType="string"/>
        </action>
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/groupDetailsFragment"
        android:name="com.example.splitwise_project.feature.groups.details.GroupDetailsFragment"
        android:label="Group Details"
        tools:layout="@layout/fragment_group_details">
        <argument
            android:name="groupId"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/expenseDetailsFragment"
        android:name="com.example.splitwise_project.feature.groups.expense_details.ExpenseDetailsFragment"
        android:label="Expense Details"
        tools:layout="@layout/fragment_expense_details">
        <argument
            android:name="groupId"
            app:argType="string" />
        <argument
            android:name="expenseId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/activityFragment"
        android:name="com.example.splitwise_project.feature.activity.ActivityFragment"
        android:label="Activity"
        tools:layout="@layout/fragment_activity" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.splitwise_project.feature.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>
